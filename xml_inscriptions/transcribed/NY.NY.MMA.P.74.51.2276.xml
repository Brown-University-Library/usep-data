         <div type="edition" xml:lang="phn">
            <ab>
               <lb n="1"/>
               <gap reason="lost" extent="unknown"/>
               <supplied reason="lost">יתן</supplied>למלך מלכ | |||<gap reason="lost" extent="unknown"/>
