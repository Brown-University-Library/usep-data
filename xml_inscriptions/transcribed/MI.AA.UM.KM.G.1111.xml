                                <support>
                                    <!-- short summary of the material and support of an inscription -->
                                    <p>Fine-grained white marble with grey veins, two small rust
                                        colored circles at the top</p>
                                    <dimensions type="surface" unit="cm">
                                        <height>17.0</height>
                                        <width>12.9</width>
                                        <depth>1.9</depth>
                                    </dimensions>
                                </support>
                                <condition ana="#fragment.single">
