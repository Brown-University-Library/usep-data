                  <msItem class="#dedicatory">
                            <!-- short summary of the content of an inscription -->
                     <p>Painting of the god Heron on wood</p>
                  </msItem>
               </msContents>
               <!--  *************************************  <physDesc>  ********************************* -->
               <physDesc>

                        <!--  *************************************  <objectDesc>  *********************************
